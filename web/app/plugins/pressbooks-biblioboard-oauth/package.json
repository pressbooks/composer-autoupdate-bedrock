{
	"name": "@pressbooks/pressbooks-biblioboard-oauth",
	"description": "Allows users to login or register on a Pressbooks network by authenticating via the BiblioBoard OAuth 2.0 provider.",
  "author": "Book Oven Inc.",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/pressbooks/pressbooks-biblioboard-oauth/issues"
  },
  "homepage": "https://github.com/pressbooks/pressbooks-biblioboard-oauth#readme",
	"dependencies": {},
	"devDependencies": {
		"pressbooks-build-tools": "^4.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/pressbooks/pressbooks-biblioboard-oauth.git"
	},
	"scripts": {
		"install-build-tools": "npm install --no-save pressbooks-build-tools",
		"watch": " mix watch",
		"build": "npm run production",
		"production": "mix --production",
		"test": "npm run lint",
		"lint": "npm run -s lint:scripts && npm run -s lint:styles",
		"lint:scripts": "eslint \"assets/scripts/*.js\"",
    "lint:fix-scripts": "eslint \"assets/scripts/*.js\" --fix",
    "lint:styles": "stylelint \"assets/styles/**/*.scss\" scss",
    "lint:fix-styles": "stylelint \"assets/styles/**/*.scss\" scss --fix"
	},
	"engines": {
		"node": ">= 14"
	},
	"eslintConfig": {
		"extends": "./node_modules/pressbooks-build-tools/config/eslint.js",
		"globals": {
			"$": true
		}
	},
	"stylelint": {
		"extends": "./node_modules/pressbooks-build-tools/config/stylelint.js"
	}
}
