<?xml version="1.0"?>
<ruleset>
  <!-- Use Pressbooks Coding Standards -->
  <rule ref="vendor/pressbooks/coding-standards">
    <!-- Disable rules Pressbooks Plugins Config disagrees with -->
    <!-- TODO: These exclusion rules should be removed and fixed in future release -->
    <exclude name="Pressbooks.Security.EscapeOutput.OutputNotEscaped"/>
    <exclude name="WordPress.NamingConventions.ValidVariableName.UsedPropertyNotSnakeCase"/>
    <exclude name="WordPress.NamingConventions.ValidVariableName.PropertyNotSnakeCase"/>
    <exclude name="Squiz.Commenting"/>
    <exclude name="WordPress.WhiteSpace.PrecisionAlignment.Found"/>
    <exclude name="Generic.Commenting.DocComment.MissingShort"/>
    <exclude name="WordPress.PHP.StrictInArray.MissingTrueStrict"/>
    <exclude name="Squiz.PHP.DisallowMultipleAssignments.FoundInControlStructure"/>
    <exclude name="PSR1.Files.SideEffects.FoundWithSymbols"/>
    <exclude name="HM.Files.NamespaceDirectoryName.NoIncDirectory"/>
    <exclude name="WordPress.CodeAnalysis.AssignmentInCondition.Found"/>
    <exclude name="PSR2R.ControlStructures.NoInlineAssignment.ConditionalInlineNotAllowed"/>
    <exclude name="HM.Classes.OnlyClassInFile.FoundMultipleDeclarations"/>
    <exclude name="WordPress.Files.FileName.InvalidClassFileName"/>
    <exclude name="HM.Files.ClassFileName.MismatchedName"/>
    <exclude name="WordPress.NamingConventions.ValidHookName.UseUnderscores"/>
    <exclude name="HM.Files.ClassFileName.MismatchedName"/>
  </rule>
  <!-- Run against the PHPCompatibility ruleset -->
  <rule ref="PHPCompatibility"/>
  <config name="testVersion" value="7.3-7.4"/>
</ruleset>
