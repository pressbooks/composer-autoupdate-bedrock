{
    "name": "roots/bedrock",
    "type": "project",
    "license": "MIT",
    "description": "WordPress boilerplate with modern development tools, easier configuration, and an improved folder structure",
    "homepage": "https://roots.io/bedrock/",
    "authors": [
        {
            "name": "Scott Walkinshaw",
            "email": "scott.walkinshaw@gmail.com",
            "homepage": "https://github.com/swalkinshaw"
        },
        {
            "name": "Ben Word",
            "email": "ben@benword.com",
            "homepage": "https://github.com/retlehs"
        }
    ],
    "keywords": [
        "bedrock",
        "roots",
        "wordpress",
        "stack",
        "composer",
        "vagrant",
        "wp"
    ],
    "support": {
        "issues": "https://github.com/roots/bedrock/issues",
        "forum": "https://discourse.roots.io/category/bedrock"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "mnsami/composer-custom-directory-installer": true,
            "roots/wordpress-core-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        },
        {
            "type": "composer",
            "url": "https://repo.packagist.com/pressbooks/"
        },
        {
            "packagist.org": false
        }
    ],
    "require": {
        "php": ">=7.4",
        "composer/installers": "^2",
        "pressbooks/pressbooks": "dev-autoupdate",
        "pressbooks/pressbooks-adunis": "^2.0",
        "pressbooks/pressbooks-andreessen": "^2.0",
        "pressbooks/pressbooks-asimov": "^2.1",
        "pressbooks/pressbooks-atwood": "^2.0",
        "pressbooks/pressbooks-austen": "^3.0",
        "pressbooks/pressbooks-baker": "^2.0",
        "pressbooks/pressbooks-biblioboard-oauth": "^3.1",
        "pressbooks/pressbooks-bisac": "^2.3",
        "pressbooks/pressbooks-book": "dev-autoupdate",
        "pressbooks/pressbooks-bradbury": "^2.0",
        "pressbooks/pressbooks-bronte": "^1.7",
        "pressbooks/pressbooks-bukowski": "^1.6",
        "pressbooks/pressbooks-christie": "^2.0",
        "pressbooks/pressbooks-clarke": "^2.0",
        "pressbooks/pressbooks-cleary": "^1.6",
        "pressbooks/pressbooks-dillard": "^2.0",
        "pressbooks/pressbooks-donham": "^2",
        "pressbooks/pressbooks-graham": "^2.0",
        "pressbooks/pressbooks-jacobs": "^1.0",
        "pressbooks/pressbooks-kolbert": "^1.2",
        "pressbooks/pressbooks-leonard": "^2.0",
        "pressbooks/pressbooks-lewis": "^1.7",
        "pressbooks/pressbooks-librarian": "^1.0",
        "pressbooks/pressbooks-malala": "^1.0",
        "pressbooks/pressbooks-network-analytics": "^2.0",
        "pressbooks/pressbooks-plugins-config": "^1.0",
        "pressbooks/pressbooks-selfe": "^1.6",
        "pressbooks/pressbooks-stats": "^1.6",
        "pressbooks/pressbooks-whitelabel": "^1.4.0",
        "rhubarbgroup/redis-cache": "^2.0",
        "roots/multisite-url-fixer": "^1.1",
        "roots/wordpress": "^6.0",
        "roots/wp-password-bcrypt": "^1.1",
        "stayallive/wp-sentry": "^6.0",
        "vlucas/phpdotenv": "^5.4",
        "wpackagist-plugin/akismet": "^5.0",
        "wpackagist-plugin/blob-mimes": "^1.3",
        "wpackagist-plugin/enable-media-replace": "^4.0",
        "wpackagist-plugin/redirection": "^5.0",
        "wpackagist-plugin/user-activation-keys": "^4.6",
        "wpackagist-plugin/wp-fail2ban-redux": "^0.8",
        "wpackagist-plugin/wp-quicklatex": "^3.8"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.3.2"
    },
    "extra": {
        "installer-paths": {
            "web/app/mu-plugins/{$name}/": [
                "type:wordpress-muplugin"
            ],
            "web/app/plugins/{$name}/": [
                "type:wordpress-plugin"
            ],
            "web/app/themes/{$name}/": [
                "type:wordpress-theme"
            ]
        },
        "wordpress-install-dir": "web/wp"
    },
    "scripts": {
        "test": [
            "vendor/bin/phpcs"
        ]
    }
}